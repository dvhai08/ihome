        </activity>
        <activity android:name=".ui.login.LoginActivity" />
        <activity android:name=".ui.main.MainActivity" />
        <activity android:name=".ui.editboard.EditBoardActivity" />
        <activity android:name=".ui.addboard.AddBoardActivity" />
